 <div class="container">
  <% flash.each do |type, msg| %>
  <!-- using helper method -->
      <div class="alert <%= bootstrap_class_for(type) %> alert-dismissible fade show" role="alert">
        
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= msg %> 
      </div>
    <% end %> 
  </div>